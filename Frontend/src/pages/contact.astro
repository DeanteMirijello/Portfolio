---
import Nav from "../components/nav.astro";
---

<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="stylesheet" href="/styles/global.css" />
    <title>Contact | Deante Mirijello</title>
  </head>

  <body>
    <Nav />

    <main>
      <header class="page-header">
        <h1>Contact</h1>
        <p>Best ways to reach me.</p>
      </header>

      <section class="contact-card">
        <div class="contact-row">
          <span class="contact-label">Location</span>
          <span class="contact-value">Montreal, QC</span>
        </div>

        <div class="contact-row">
          <span class="contact-label">Email</span>
          <a class="contact-link" href="mailto:deante.mirijello@gmail.com">
            deante.mirijello@gmail.com
          </a>
        </div>

        <div class="contact-row">
          <span class="contact-label">Phone</span>
          <a class="contact-link" href="tel:+14384985685">(438) 498-5685</a>
        </div>

        <div class="contact-row">
          <span class="contact-label">GitHub</span>
          <a class="contact-link" href="https://github.com/DeanteMirijello" target="_blank" rel="noreferrer">
            github.com/DeanteMirijello
          </a>
        </div>

        <div class="contact-row">
          <span class="contact-label">LinkedIn</span>
          <a class="contact-link" href="https://linkedin.com/in/deante-mirijello" target="_blank" rel="noreferrer">
            linkedin.com/in/deante-mirijello
          </a>
        </div>
      </section>
    </main>
  </body>
</html>
